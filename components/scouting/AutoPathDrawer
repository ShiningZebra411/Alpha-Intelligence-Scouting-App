import React, { useRef, useState, useEffect, useCallback } from 'react';
import { Button } from '@/components/ui/button';
import { Undo2, Trash2 } from 'lucide-react';

const FIELD_IMAGE = "https://qtrypzzcjebvfcihiynt.supabase.co/storage/v1/object/public/base44-prod/public/69641aa3cde027d7875356ed/84a15ad06_Screenshot2026-01-13at43945PM.png";
const ROTATE_IMAGE = true; // Rotate 90 degrees clockwise

export default function AutoPathDrawer({ value, onChange, pathColor = '#22d3ee' }) {
  const canvasRef = useRef(null);
  const [isDrawing, setIsDrawing] = useState(false);
  const [paths, setPaths] = useState([]);
  const currentPathRef = useRef([]);
  const imageRef = useRef(null);

  useEffect(() => {
    if (value) {
      try {
        setPaths(JSON.parse(value));
      } catch {
        setPaths([]);
      }
    }
    
    // Preload image
    const img = new Image();
    img.crossOrigin = "anonymous";
    img.src = FIELD_IMAGE;
    img.onload = () => {
      imageRef.current = img;
      redrawCanvas();
    };
  }, []);

  const redrawCanvas = useCallback(() => {
    const canvas = canvasRef.current;
    if (!canvas) return;
    
    const ctx = canvas.getContext('2d');
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    
    // Draw background image (rotated 90 degrees clockwise)
    if (imageRef.current) {
      ctx.save();
      ctx.translate(canvas.width / 2, canvas.height / 2);
      ctx.rotate(Math.PI / 2); // 90 degrees clockwise
      ctx.drawImage(imageRef.current, -canvas.height / 2, -canvas.width / 2, canvas.height, canvas.width);
      ctx.restore();
    } else {
      ctx.fillStyle = '#1f1f23';
      ctx.fillRect(0, 0, canvas.width, canvas.height);
    }
    
    // Draw all saved paths
    paths.forEach(path => drawPath(ctx, path));
    
    // Draw current path
    if (currentPathRef.current.length > 0) {
      drawPath(ctx, currentPathRef.current);
    }
  }, [paths]);

  useEffect(() => {
    redrawCanvas();
  }, [paths, redrawCanvas]);

  const drawPath = (ctx, path, color = pathColor) => {
    if (path.length < 2) return;
    
    ctx.beginPath();
    ctx.moveTo(path[0].x, path[0].y);
    for (let i = 1; i < path.length; i++) {
      ctx.lineTo(path[i].x, path[i].y);
    }
    ctx.strokeStyle = path.color || color;
    ctx.lineWidth = 3;
    ctx.lineCap = 'round';
    ctx.lineJoin = 'round';
    ctx.stroke();
    
    // Draw start point
    ctx.beginPath();
    ctx.arc(path[0].x, path[0].y, 6, 0, Math.PI * 2);
    ctx.fillStyle = '#22c55e';
    ctx.fill();
    
    // Draw end point
    if (path.length > 1) {
      ctx.beginPath();
      ctx.arc(path[path.length - 1].x, path[path.length - 1].y, 6, 0, Math.PI * 2);
      ctx.fillStyle = '#ef4444';
      ctx.fill();
    }
  };

  const getCoords = (e) => {
    const canvas = canvasRef.current;
    const rect = canvas.getBoundingClientRect();
    const scaleX = canvas.width / rect.width;
    const scaleY = canvas.height / rect.height;
    
    if (e.touches) {
      return {
        x: (e.touches[0].clientX - rect.left) * scaleX,
        y: (e.touches[0].clientY - rect.top) * scaleY
      };
    }
    return {
      x: (e.clientX - rect.left) * scaleX,
      y: (e.clientY - rect.top) * scaleY
    };
  };

  const startDrawing = (e) => {
    e.preventDefault();
    setIsDrawing(true);
    const coords = getCoords(e);
    currentPathRef.current = [coords];
  };

  const draw = useCallback((e) => {
    if (!isDrawing) return;
    e.preventDefault();
    
    const coords = getCoords(e);
    const lastPoint = currentPathRef.current[currentPathRef.current.length - 1];
    
    // Only add point if moved enough (reduces points for performance)
    const dx = coords.x - lastPoint.x;
    const dy = coords.y - lastPoint.y;
    if (dx * dx + dy * dy > 16) { // 4px minimum distance
      currentPathRef.current.push(coords);
      
      // Draw incrementally instead of full redraw
      const canvas = canvasRef.current;
      const ctx = canvas.getContext('2d');
      ctx.beginPath();
      ctx.moveTo(lastPoint.x, lastPoint.y);
      ctx.lineTo(coords.x, coords.y);
      ctx.strokeStyle = pathColor;
      ctx.lineWidth = 3;
      ctx.lineCap = 'round';
      ctx.stroke();
    }
  }, [isDrawing]);

  const stopDrawing = () => {
    if (currentPathRef.current.length > 1) {
      const pathWithColor = currentPathRef.current;
      pathWithColor.color = pathColor;
      const newPaths = [...paths, pathWithColor];
      setPaths(newPaths);
      onChange(JSON.stringify(newPaths));
    }
    currentPathRef.current = [];
    setIsDrawing(false);
    redrawCanvas();
  };

  const undo = () => {
    const newPaths = paths.slice(0, -1);
    setPaths(newPaths);
    onChange(JSON.stringify(newPaths));
  };

  const clear = () => {
    setPaths([]);
    onChange('');
  };

  return (
    <div className="space-y-3">
      <div className="flex items-center justify-between">
        <span className="text-zinc-300 text-sm font-medium">Auto Path</span>
        <div className="flex gap-2">
          <Button
            type="button"
            variant="outline"
            size="sm"
            onClick={undo}
            disabled={paths.length === 0}
            className="border-zinc-700 bg-zinc-800 hover:bg-zinc-700 text-zinc-300"
          >
            <Undo2 className="h-4 w-4" />
          </Button>
          <Button
            type="button"
            variant="outline"
            size="sm"
            onClick={clear}
            disabled={paths.length === 0}
            className="border-zinc-700 bg-zinc-800 hover:bg-zinc-700 text-zinc-300"
          >
            <Trash2 className="h-4 w-4" />
          </Button>
        </div>
      </div>
      <div className="relative rounded-xl overflow-hidden border border-zinc-700 bg-zinc-800">
        <canvas
          ref={canvasRef}
          width={400}
          height={400}
          className="w-full touch-none cursor-crosshair"
          onMouseDown={startDrawing}
          onMouseMove={draw}
          onMouseUp={stopDrawing}
          onMouseLeave={stopDrawing}
          onTouchStart={startDrawing}
          onTouchMove={draw}
          onTouchEnd={stopDrawing}
        />
      </div>
      <p className="text-zinc-500 text-xs">Draw your robot's autonomous path on the field</p>
    </div>
  );
}
