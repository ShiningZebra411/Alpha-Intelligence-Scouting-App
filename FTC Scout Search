import React, { useState, useEffect } from 'react';
import { Link, useNavigate } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { Button } from '@/components/ui/button';
import { Card, CardContent } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { motion, AnimatePresence } from 'framer-motion';
import BackgroundWrapper from '@/components/BackgroundWrapper';
import { 
  ArrowLeft, 
  Search, 
  Trophy, 
  Target, 
  Zap, 
  Users,
  MapPin,
  Loader2,
  ExternalLink,
  Calendar
} from 'lucide-react';

const API_BASE = 'https://api.ftcscout.org/rest/v1';

export default function FTCScoutSearch() {
  const navigate = useNavigate();
  const [searchQuery, setSearchQuery] = useState('');
  const [teamData, setTeamData] = useState(null);
  const [teamStats, setTeamStats] = useState(null);
  const [teamEvents, setTeamEvents] = useState([]);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState('');

  useEffect(() => {
    const verified = localStorage.getItem('ftc_team_verified');
    if (verified !== '15337') {
      navigate(createPageUrl('TeamVerify'));
    }
  }, [navigate]);

  const searchTeam = async () => {
    if (!searchQuery.trim()) return;
    
    setLoading(true);
    setError('');
    setTeamData(null);
    setTeamStats(null);
    setTeamEvents([]);

    try {
      // Fetch team info
      const teamRes = await fetch(`${API_BASE}/teams/${searchQuery}`);
      if (!teamRes.ok) {
        throw new Error('Team not found');
      }
      const team = await teamRes.json();
      setTeamData(team);

      // Fetch team quick stats for current DECODE season (2025)
      const statsRes = await fetch(`${API_BASE}/teams/${searchQuery}/quick-stats?season=2025`);
      if (statsRes.ok) {
        const stats = await statsRes.json();
        setTeamStats(stats);
      }

      // Fetch team events for current season
      const eventsRes = await fetch(`${API_BASE}/teams/${searchQuery}/events/2025`);
      if (eventsRes.ok) {
        const events = await eventsRes.json();
        setTeamEvents(events);
      }

    } catch (err) {
      setError(err.message || 'Failed to fetch team data');
    } finally {
      setLoading(false);
    }
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    searchTeam();
  };

  return (
    <BackgroundWrapper>
      {/* Header */}
      <div className="bg-zinc-950/80 backdrop-blur-xl border-b border-zinc-900 sticky top-0 z-50">
        <div className="max-w-4xl mx-auto px-4 py-4">
          <Link to={createPageUrl('Hub')} className="flex items-center gap-2 text-zinc-400 hover:text-white transition-colors">
            <ArrowLeft className="h-4 w-4" />
            <span className="text-sm">Back</span>
          </Link>
        </div>
      </div>

      <div className="max-w-4xl mx-auto px-4 py-8">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="text-center mb-8"
        >
          <h1 className="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent mb-2">
            FTC Scout Search
          </h1>
          <p className="text-zinc-500">Search any FTC team to view their DECODE season stats</p>
        </motion.div>

        {/* Search Bar */}
        <form onSubmit={handleSubmit} className="mb-8">
          <div className="flex gap-3 max-w-md mx-auto">
            <div className="relative flex-1">
              <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-zinc-500" />
              <Input
                type="text"
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                placeholder="Enter team number"
                className="bg-zinc-900/50 border-zinc-800 text-white pl-10 h-12 rounded-xl backdrop-blur-sm"
              />
            </div>
            <Button 
              type="submit" 
              className="bg-purple-500 hover:bg-purple-400 text-white font-medium rounded-xl h-12 px-6"
              disabled={loading}
            >
              {loading ? <Loader2 className="h-5 w-5 animate-spin" /> : 'Search'}
            </Button>
          </div>
        </form>

        {/* Error State */}
        {error && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            className="text-center py-8"
          >
            <p className="text-red-400">{error}</p>
          </motion.div>
        )}

        {/* Team Results */}
        <AnimatePresence>
          {teamData && (
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -20 }}
              className="space-y-6"
            >
              {/* Team Header */}
              <Card className="bg-zinc-900/50 border-zinc-800 backdrop-blur-sm overflow-hidden">
                <CardContent className="p-6">
                  <div className="flex items-start justify-between">
                    <div>
                      <div className="flex items-center gap-3 mb-2">
                        <span className="text-3xl font-bold text-purple-400">#{teamData.number}</span>
                        <h2 className="text-2xl font-bold text-white">{teamData.name}</h2>
                      </div>
                      <div className="flex items-center gap-4 text-zinc-400 text-sm">
                        {teamData.schoolName && (
                          <span>{teamData.schoolName}</span>
                        )}
                        {teamData.city && teamData.state && (
                          <div className="flex items-center gap-1">
                            <MapPin className="h-4 w-4" />
                            <span>{teamData.city}, {teamData.state}, {teamData.country}</span>
                          </div>
                        )}
                      </div>
                      {teamData.rookieYear && (
                        <p className="text-zinc-500 text-sm mt-2">Rookie Year: {teamData.rookieYear}</p>
                      )}
                    </div>
                    <a 
                      href={`https://ftcscout.org/teams/${teamData.number}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      className="text-purple-400 hover:text-purple-300 transition-colors"
                    >
                      <ExternalLink className="h-5 w-5" />
                    </a>
                  </div>
                </CardContent>
              </Card>

              {/* Quick Stats */}
              {teamStats && (
                <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
                  <StatCard 
                    icon={Trophy} 
                    label="Rank" 
                    value={teamStats.rank ? `#${teamStats.rank.rank}` : 'N/A'} 
                    subtext={teamStats.rank ? `of ${teamStats.rank.totalTeams}` : ''}
                    color="amber" 
                  />
                  <StatCard 
                    icon={Target} 
                    label="OPR" 
                    value={teamStats.tot?.value?.toFixed(1) || 'N/A'} 
                    color="cyan" 
                  />
                  <StatCard 
                    icon={Zap} 
                    label="Auto OPR" 
                    value={teamStats.auto?.value?.toFixed(1) || 'N/A'} 
                    color="green" 
                  />
                  <StatCard 
                    icon={Users} 
                    label="Teleop OPR" 
                    value={teamStats.dc?.value?.toFixed(1) || 'N/A'} 
                    color="blue" 
                  />
                </div>
              )}

              {/* Events */}
              {teamEvents.length > 0 && (
                <Card className="bg-zinc-900/50 border-zinc-800 backdrop-blur-sm">
                  <CardContent className="p-6">
                    <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                      <Calendar className="h-5 w-5 text-purple-400" />
                      DECODE Season Events
                    </h3>
                    <div className="space-y-3">
                      {teamEvents.map((event, index) => (
                        <motion.div
                          key={event.eventCode}
                          initial={{ opacity: 0, x: -10 }}
                          animate={{ opacity: 1, x: 0 }}
                          transition={{ delay: index * 0.1 }}
                          className="flex items-center justify-between p-3 bg-zinc-800/50 rounded-xl"
                        >
                          <div>
                            <p className="text-white font-medium">{event.eventCode}</p>
                            {event.stats && (
                              <p className="text-zinc-500 text-sm">
                                OPR: {event.stats.opr?.totalPointsNp?.toFixed(1) || 'N/A'}
                              </p>
                            )}
                          </div>
                          {event.stats?.rank && (
                            <span className="text-purple-400 font-semibold">
                              Rank #{event.stats.rank}
                            </span>
                          )}
                        </motion.div>
                      ))}
                    </div>
                  </CardContent>
                </Card>
              )}

              {!teamStats && !loading && (
                <Card className="bg-zinc-900/50 border-zinc-800 backdrop-blur-sm">
                  <CardContent className="p-8 text-center">
                    <p className="text-zinc-500">No DECODE season data available for this team yet.</p>
                  </CardContent>
                </Card>
              )}
            </motion.div>
          )}
        </AnimatePresence>

        {/* Empty State */}
        {!teamData && !loading && !error && (
          <div className="text-center py-16">
            <div className="h-20 w-20 rounded-2xl bg-purple-500/10 flex items-center justify-center mx-auto mb-6">
              <Search className="h-10 w-10 text-purple-400" />
            </div>
            <p className="text-zinc-500">Enter a team number to search</p>
          </div>
        )}
      </div>
    </BackgroundWrapper>
  );
}

function StatCard({ icon: Icon, label, value, subtext, color }) {
  const colorClasses = {
    amber: 'bg-amber-500/10 text-amber-400',
    cyan: 'bg-cyan-500/10 text-cyan-400',
    green: 'bg-green-500/10 text-green-400',
    blue: 'bg-blue-500/10 text-blue-400',
    purple: 'bg-purple-500/10 text-purple-400'
  };

  return (
    <Card className="bg-zinc-900/50 border-zinc-800 backdrop-blur-sm">
      <CardContent className="p-4">
        <div className={`h-10 w-10 rounded-xl ${colorClasses[color]} flex items-center justify-center mb-3`}>
          <Icon className="h-5 w-5" />
        </div>
        <p className="text-2xl font-bold text-white">{value}</p>
        {subtext && <p className="text-zinc-600 text-xs">{subtext}</p>}
        <p className="text-zinc-500 text-sm">{label}</p>
      </CardContent>
    </Card>
  );
}
