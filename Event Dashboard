import React, { useState, useMemo } from 'react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { base44 } from '@/api/base44Client';
import { useQuery } from '@tanstack/react-query';
import { Button } from '@/components/ui/button';
import { Card, CardContent } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Tabs, TabsList, TabsTrigger, TabsContent } from '@/components/ui/tabs';
import { motion } from 'framer-motion';
import BackgroundWrapper from '@/components/BackgroundWrapper';
import { 
  ArrowLeft, 
  Plus, 
  BarChart3, 
  ClipboardList, 
  Trophy,
  Users,
  Target,
  Search
} from 'lucide-react';
import TeamRankings from '@/components/scouting/TeamRankings';
import RecentMatches from '@/components/scouting/RecentMatches';
import TeamSearch from '@/components/scouting/TeamSearch';

export default function EventDashboard() {
  const urlParams = new URLSearchParams(window.location.search);
  const eventId = urlParams.get('eventId');
  const [searchQuery, setSearchQuery] = useState('');

  const { data: event } = useQuery({
    queryKey: ['event', eventId],
    queryFn: () => base44.entities.Event.filter({ id: eventId }).then(r => r[0]),
    enabled: !!eventId,
  });

  const { data: matches = [], isLoading } = useQuery({
    queryKey: ['matches', eventId],
    queryFn: () => base44.entities.MatchScout.filter({ event_id: eventId }, '-match_number'),
    enabled: !!eventId,
  });

  // Calculate statistics
  const stats = useMemo(() => {
    if (!matches.length) return { teams: 0, matches: 0, avgScore: 0, topScore: 0 };
    
    const uniqueTeams = new Set(matches.map(m => m.team_number));
    const scores = matches.map(m => m.total_score || 0);
    
    return {
      teams: uniqueTeams.size,
      matches: matches.length,
      avgScore: scores.length ? Math.round(scores.reduce((a, b) => a + b, 0) / scores.length) : 0,
      topScore: Math.max(...scores, 0)
    };
  }, [matches]);

  // Check if search is active
  const isSearching = searchQuery.trim().length > 0;

  return (
    <BackgroundWrapper>
      {/* Header */}
      <div className="bg-zinc-950/80 backdrop-blur-xl border-b border-zinc-900 sticky top-0 z-50">
        <div className="max-w-6xl mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <Link to={createPageUrl('Events')} className="flex items-center gap-2 text-zinc-400 hover:text-white transition-colors">
              <ArrowLeft className="h-4 w-4" />
              <span className="text-sm">Events</span>
            </Link>
            <Link to={createPageUrl('ScoutMatch') + `?eventId=${eventId}`}>
              <Button className="bg-cyan-500 hover:bg-cyan-400 text-black font-medium rounded-xl">
                <Plus className="h-4 w-4 mr-2" />
                Scout Match
              </Button>
            </Link>
          </div>
        </div>
      </div>

      <div className="max-w-6xl mx-auto px-4 py-8">
        {/* Event Title */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="mb-8"
        >
          <h1 className="text-3xl font-bold text-white mb-2">{event?.name || 'Loading...'}</h1>
          <p className="text-zinc-500">{event?.location}</p>
        </motion.div>

        {/* Search Bar */}
        <div className="mb-8">
          <div className="relative max-w-md">
            <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-zinc-500" />
            <Input
              placeholder="Search team number..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="bg-zinc-900/50 border-zinc-800 text-white pl-10 h-12 rounded-xl backdrop-blur-sm"
            />
          </div>
        </div>

        {/* Show Team Search Results or Normal Dashboard */}
        {isSearching ? (
          <TeamSearch matches={matches} searchQuery={searchQuery} eventId={eventId} />
        ) : (
          <>
            {/* Stats Cards */}
            <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
              <StatCard icon={Users} label="Teams Scouted" value={stats.teams} color="cyan" />
              <StatCard icon={ClipboardList} label="Matches" value={stats.matches} color="blue" />
              <StatCard icon={Target} label="Avg Score" value={stats.avgScore} color="purple" />
              <StatCard icon={Trophy} label="Top Score" value={stats.topScore} color="amber" />
            </div>

            {/* Main Content Tabs */}
            <Tabs defaultValue="rankings" className="space-y-6">
              <TabsList className="bg-zinc-900/80 border border-zinc-800 p-1 rounded-xl backdrop-blur-sm">
                <TabsTrigger 
                  value="rankings" 
                  className="data-[state=active]:bg-cyan-500 data-[state=active]:text-black rounded-lg"
                >
                  <BarChart3 className="h-4 w-4 mr-2" />
                  Rankings
                </TabsTrigger>
                <TabsTrigger 
                  value="matches" 
                  className="data-[state=active]:bg-cyan-500 data-[state=active]:text-black rounded-lg"
                >
                  <ClipboardList className="h-4 w-4 mr-2" />
                  Matches
                </TabsTrigger>
              </TabsList>

              <TabsContent value="rankings">
                <TeamRankings matches={matches} isLoading={isLoading} />
              </TabsContent>

              <TabsContent value="matches">
                <RecentMatches matches={matches} isLoading={isLoading} eventId={eventId} />
              </TabsContent>
            </Tabs>
          </>
        )}
      </div>
    </BackgroundWrapper>
  );
}

function StatCard({ icon: Icon, label, value, color }) {
  const colorClasses = {
    cyan: 'bg-cyan-500/10 text-cyan-400',
    blue: 'bg-blue-500/10 text-blue-400',
    purple: 'bg-purple-500/10 text-purple-400',
    amber: 'bg-amber-500/10 text-amber-400'
  };

  return (
    <motion.div
      initial={{ opacity: 0, scale: 0.95 }}
      animate={{ opacity: 1, scale: 1 }}
    >
      <Card className="bg-zinc-900/50 border-zinc-800 backdrop-blur-sm">
        <CardContent className="p-4">
          <div className={`h-10 w-10 rounded-xl ${colorClasses[color]} flex items-center justify-center mb-3`}>
            <Icon className="h-5 w-5" />
          </div>
          <p className="text-2xl font-bold text-white">{value}</p>
          <p className="text-zinc-500 text-sm">{label}</p>
        </CardContent>
      </Card>
    </motion.div>
  );
}
